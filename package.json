{
  "name": "wa-server",
  "version": "1.0.0",
  "description": "WhatsApp notification server with webhook support",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "generate-token": "node scripts/generate-token.js",
    "docker:build": "docker build -t wa-server .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/sessions:/app/sessions wa-server"
  },
  "keywords": [
    "whatsapp",
    "webhook",
    "notifications",
    "baileys"
  ],
  "author": "ctamas@zerobias.com",
  "license": "MIT",
  "dependencies": {
    "@whiskeysockets/baileys": "^7.0.0-rc.6",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "qrcode": "^1.5.4",
    "uuid": "^11.0.5",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
