# Server Configuration
PORT=3000
NODE_ENV=production

# API Authentication
# Leave empty to auto-generate on first run
# Or set your own secure token
API_TOKEN=

# WhatsApp Configuration
SESSION_FOLDER=./sessions

# Rate Limiting
# Time window in milliseconds
RATE_LIMIT_WINDOW_MS=1000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=1

# Logging
# Options: error, warn, info, debug
LOG_LEVEL=info

# Connection Retry Settings
# Maximum number of reconnection attempts before cooldown (default: 2)
MAX_RECONNECT_ATTEMPTS=2
# Base delay between retries in milliseconds (default: 60000 = 1 minute)
BASE_RETRY_DELAY_MS=60000
# Cooldown period after max attempts in milliseconds (default: 300000 = 5 minutes)
COOLDOWN_PERIOD_MS=300000